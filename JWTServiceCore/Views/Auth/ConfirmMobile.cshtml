@model JWTServiceCore.Models.ViewModels.ConfirmViewModel

@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Confirm</h1>

<h4>Confirm Mobile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Auth" asp-action="ConfirmMobile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Code" class="control-label">@Model.Code</label>
            <input type="hidden" asp-for="ResetPassword" />
            <input type="hidden" asp-for="Code" />
            <div class="form-group mb-2">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" readonly="readonly" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SendCode" class="control-label"></label>
                <input asp-for="SendCode" class="form-control" />
                <span asp-validation-for="SendCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>