@model IEnumerable<JWTServiceCore.Models.ViewModels.ClaimViewModel>

@{
    ViewData["Title"] = "Role Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.FirstOrDefault()!.RoleName</h1>

<p>
    <a asp-controller="Claim" asp-action="CreateRoleClaim" asp-route-roleName="@Model.FirstOrDefault()!.RoleName">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-controller="Claim" asp-action="EditRoleClaim" asp-route-roleName="@item.RoleName" asp-route-claimType="@item.Type">Edit</a> |
                    <a asp-controller="Claim" asp-action="DeleteRoleClaim" asp-route-roleName="@item.RoleName" asp-route-claimType="@item.Type" asp-route-claimValue="@item.Value">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
