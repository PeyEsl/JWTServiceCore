@model IEnumerable<JWTServiceCore.Models.ViewModels.ClaimViewModel>

@{
    ViewData["Title"] = "User Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.FirstOrDefault()!.UserName</h1>

<p>
    <a asp-controller="Claim" asp-action="CreateUserClaim" asp-route-userId="@Model.FirstOrDefault()!.UserId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    <a asp-controller="Claim" asp-action="EditUserClaim" asp-route-userId="@item.UserId" asp-route-claimType="@item.Type">Edit</a> |
                    <a asp-controller="Claim" asp-action="DeleteUserClaim" asp-route-userId="@item.UserId" asp-route-claimType="@item.Type">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
