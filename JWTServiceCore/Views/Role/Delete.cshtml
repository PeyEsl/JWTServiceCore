@model JWTServiceCore.Models.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Claims)
        </dt>
        <dd class="col-sm-10">
            @foreach (var claim in Model.Claims!)
            {
                <div><b>Type: </b>@claim.Type | <b>Value: </b>@claim.Value</div>
            }
        </dd>
    </dl>
    
    <form asp-controller="Role" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Role" asp-action="Index">Back to List</a>
    </form>
</div>
